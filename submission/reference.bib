	keywords = {16S rRNA gene sequencing, azoxymethane, Colorectal cancer, dextran sodium sulfate, microbial ecology, Microbiome, murine models}
}

@article{hu_manipulation_2016,
	title = {Manipulation of the gut microbiota using resistant starch is associated with protection against colitis-associated colorectal cancer in rats},

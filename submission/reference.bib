	journal = {Gut},
	author = {Richards, C. H. and Ventham, N. T. and Mansouri, D. and Wilson, M. and Ramsay, G. and Mackay, C. D. and Parnaby, C. N. and Smith, D. and On, J. and Speake, D. and McFarlane, G. and Neo, Y. N. and Aitken, E. and Forrest, C. and Knight, K. and McKay, A. and Nair, H. and Mulholland, C. and Robertson, J. H. and Carey, F. A. and Steele, Rjc and {Scottish Surgical Research Group}},
